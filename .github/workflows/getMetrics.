name: Monthly issue metrics
on:
  workflow_dispatch

permissions:
  contents: read

jobs:
  build:
    name: issue metrics
    runs-on: ubuntu-latest
    permissions:
      issues: write
      pull-requests: read

    steps:

    - name: Send mail
      uses: dawidd6/action-send-mail@v3
      with:
        server_address: mail.smtp.host
        server_port: 465
        subject: TEST TEST Github Actions job result
        to: reechak@amazon.com
        from: BDX Team
        body: test | TEST | test
        convert_markdown: true
